<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zijincaifu.crm.dao.personnel.IFunctionDao">
	<resultMap id="FunctionResultMap" type="com.zijincaifu.crm.entity.personnel.FunctionEntity">
		<id property="id" column="ID" jdbcType="VARCHAR" />
		<result property="title" column="TITLE" jdbcType="VARCHAR" />
		<result property="url" column="URL" jdbcType="VARCHAR" />
		<result property="parentId" column="PARENT_ID" jdbcType="VARCHAR" />
		<result property="level" column="LEVEL" jdbcType="INTEGER" />
	</resultMap>

	<!-- 系统功能高级查询 -->
	<select id="queryFunction" resultMap="FunctionResultMap"
		parameterType="com.sxj.util.persistent.QueryCondition">
		<![CDATA[SELECT f.ID,f.TITLE,f.URL,f.PARENT_ID,f.LEVEL 
		 FROM CRM_FUNCTION f WHERE 1=1]]>
		<if test="condition.parentId != null and condition.parentId!=''">
			<![CDATA[ AND f.PARENT_ID=#{condition.parentId}]]>
		</if>
		<![CDATA[ ORDER BY f.DESCS]]>
	</select>
</mapper>